+#elif HAVE_SYS_EVENT_H
+WL_EXPORT int
+wl_event_loop_dispatch(struct wl_event_loop *loop, int timeout)
+{
+	/* kqueue sends separate events */
+	struct kevent ev[64];     
+	struct wl_event_source *source;
