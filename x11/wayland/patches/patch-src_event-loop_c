+#if defined(HAVE_SYS_EVENT_H)
+static int
+wl_event_loop_dispatch_signal_event(int signal_number, void *data)
+{
+	struct wl_event_loop *loop = data;
+	struct wl_kqueue_signal_handler *ksh;
+
+	wl_list_foreach(ksh, &loop->signals[signal_number], link)
+		ksh->func(signal_number, ksh->data);
+}
+#endif
+
+WL_EXPORT struct wl_event_source *
+wl_event_loop_add_signal(struct wl_event_loop *loop,
+			int signal_number,
+			wl_event_loop_signal_func_t func,
+			void *data)
+{
+#if defined(HAVE_SYS_EVENT_H)
+	struct wl_kqueue_signal_handler *ksh;
+	struct kevent ev;
+#endif
+	struct wl_event_source_signal *source = NULL;;
+
+#if defined(HAVE_SYS_SIGNALFD_H)
+	/* Linux. Use signalfd. Multiple handlers are possible. */
+	source = wl_event_loop_create_signal_source(signal_number, func);
+	if (source == NULL)
+		return NULL;
+	source->base.fd = signalfd(-1, &mask, SFD_CLOEXEC | SFD_NONBLOCK);
 	return add_source(loop, &source->base, WL_EVENT_READABLE, data);
+#elif defined(HAVE_SYS_EVENT_H)
+	/* BSD. Use kqueue. Multiple handlers need special treatment. */
+	ksh = NULL;
+	if (signal_number <= 0 || signal_number >= NSIG) {
+		errno = EINVAL;
+		goto err;
+	}
+	ksh = malloc(sizeof(struct wl_kqueue_signal_handler));
+	if (ksh == NULL)
+		goto err;
+	ksh->func = func;
+	ksh->data = data;
+
+	if (wl_list_empty(&loop->signals[signal_number])) {
+		/* set up source and kevent objects */
+		source = wl_event_loop_create_signal_source(signal_number);
+		if (source == NULL)
+			goto err;
+		wl_list_init(&source->base.link);
+		EV_SET(&ev, signal_number, EVFILT_SIGNAL, EV_ADD | EV_ENABLE, 0, 0,
+		       source);
+		if (kevent(loop->event_fd, &ev, 1, NULL, 0, NULL) < 0) {
+			warn("error adding handler for signal %i (%p) in event loop %p",
+			     signal_number, source, loop);
+			free(source);
+			return NULL;
+		}
+	}
+
+	wl_list_insert(&loop->signals[signal_number], ksh->link);
+	return &source->base;
+
+err:
+	free(source);
+	free(ksh);
+	return NULL;
+#endif
 }
 
